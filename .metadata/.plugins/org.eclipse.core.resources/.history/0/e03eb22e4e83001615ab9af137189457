import cucumber.api.PendingException;
import cucumber.api.java.en.And;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;

public class LoginStep {
	@Given("^user navigates to the website$")
	public void user_navigates_to_facebook_website( ) throws Throwable {
		System.out.println("@Given: User Navigates to Facebook.com");
		throw new PendingException();
	}

	@When("^user validates to homepage $")
	public void user_validates_to_homepage_title() throws Throwable {
		System.out.println("@When:User validates to homepage ");
		throw new PendingException();
	}

	@Then("^user entered the \"([^\"]*)\" username $")
	public void user_entered_the_username(String user) throws Throwable {
		System.out.println("@Then: user enter the "+user+" username");
		throw new PendingException();
	}

	@Then("^user entered the \"([^\"]*)\" password $")
	public void user_entered_the_password(String pw) throws Throwable {
		System.out.println("Then: user enter the "+pw+" password");
		throw new PendingException();
	}

	@Then("^user \"([^\"]*)\" successfully logged in$")
	public void user_should_be_successfully_logged_in(String logintype) throws Throwable {
		System.out.println("@Then user "+logintype+" be successfully logged in");
		throw new PendingException();
	}


}
